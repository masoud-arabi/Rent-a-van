<h1>Update a van</h1>

<%= simple_form_for(@van) do |f| %>
  <%= f.input :photo, as: :file %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :address %>
  <%= f.submit %>
<% end %>

<p><%= link_to "Go back", van_path(@van), class: "btn btn-primary" %></p>
