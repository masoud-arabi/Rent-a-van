<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <% @vans.each do |van| %>
        <div class="card-trip">
        <% if van.photo.attached? %>
            <%= cl_image_tag van.photo.key, height: 300, width: 400, crop: :fill %>
        <% end %>
          <div class="card-trip-infos">
          <div>
          <h2><%= link_to van.title, van_path(van) %></h2>
          <p><%= van.description %></p>
          <h5>Average stars: <% van.average_stars.to_i.times do %>
            <i class="fas fa-star"></i>
          <% end %>
          </h5>
          </div>
           <h2 class="card-trip-pricing">$<%= van.price %></h2>


            <% if user_signed_in? && current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, height: 40, width: 40, crop: :fill, class: "card-trip-user avatar-bordered" %>
            <% else %>
              <%= image_tag "https://upload.wikimedia.org/wikipedia/commons/thumb/b/b3/Volkswagen_Van_Flat_Icon_Vector.svg/1024px-Volkswagen_Van_Flat_Icon_Vector.svg.png" %>

            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-sm-6">

        <div id="map"
        style="width: 100%; height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>

    </div>

  </div>
</div>

