
<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <% @vans.each do |van| %>
        <div class="card-trip">
          <img src="https://specials-images.forbesimg.com/imageserve/5f3435106f8317da467f8d48/960x0.jpg?fit=scale" />
          <div class="card-trip-infos">
          <div>
          <h2><%= link_to van.title, van_path(van) %></h2>
          <p><%= van.description %></p>
          </div>
           <h2 class="card-trip-pricing">$<%= van.price %></h2>
            <%= image_tag "profile.png", class: "card-trip-user avatar-bordered" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-sm-6">

        <div id="map"
        style="width: 100%; height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>

    </div>

  </div>
</div>


